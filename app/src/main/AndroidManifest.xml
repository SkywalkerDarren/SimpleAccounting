<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.skywalkerdarren.simpleaccounting">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_bill"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.BillListActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".ui.BillDetailPagerActivity"
            android:label="@string/detail_bill" />

        <activity
            android:name=".ui.BillEditActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />

    </application>

</manifest>